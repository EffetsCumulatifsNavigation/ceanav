  author = {Trew, Brittany T. and Grantham, Hedley S. and Barrientos, Christian and Collins, Tim and Doherty, Philip D. and Formia, Angela and Godley, Brendan J. and Maxwell, Sara M. and Parnell, Richard J. and Pikesley, Stephen K. and Tilley, Dominic and Witt, Matthew J. and Metcalfe, Kristian},
  year = {2019},
  journal = {Frontiers in Marine Science},
  volume = {6},
  issn = {2296-7745},
