@article{goyette2016,
  title = {Changes in Anthropogenic Nitrogen and Phosphorus Inputs to the {{St}}. {{Lawrence}} Sub-Basin over 110 Years and Impacts on Riverine Export},
  author = {Goyette, Jean-Olivier and Bennett, Elena M. and Howarth, Robert W. and Maranger, Roxane},
